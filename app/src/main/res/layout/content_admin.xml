<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".admin">

    <Button
        android:id="@+id/pendreqa"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/cutom_btn"
        android:drawableTop="@drawable/pending"
        android:paddingTop="30dp"
        android:text="PRENDING     REQUESTS"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adashboard" />

    <Button
        android:id="@+id/checkha"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/cutom_btn"
        android:drawableTop="@drawable/wait"
        android:paddingTop="30dp"
        android:text="CHECK HISTORY"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toEndOf="@+id/rejectedca"
        app:layout_constraintTop_toBottomOf="@+id/pendreqa"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/rejectedca"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/cutom_btn"
        android:text="REJECTED COMPLAINTS"
        android:drawableTop="@drawable/cross"
        android:paddingTop="30dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pendreqa" />

    <TextView
        android:id="@+id/adashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Admin Dashboard"
        android:textColor="@color/Black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>